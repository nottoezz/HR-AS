/**
 * HR Admin System - Prisma Schema
 * ---------------------------------------------------------
 * Sections
 * - Boilerplate (generator + datasource)
 * - HR enums (roles + statuses)
 * - Auth models (NextAuth)
 * - HR domain models (Employee, Department, EmployeeDepartment)
 * ---------------------------------------------------------
 */

// Boilerplate
// ------------------------------------------------------
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
  // Further reading:
  // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
  // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string

  // using primsa 7, url set in primsa.config.ts
  // url      = env("DATABASE_URL")
}

// HR enums
// ------------------------------------------------------
enum UserRole {
  HRADMIN
  MANAGER
  EMPLOYEE
}

enum EmployeeStatus {
  ACTIVE
  INACTIVE
}

enum DepartmentStatus {
  ACTIVE
  INACTIVE
}

// Auth models
// ------------------------------------------------------
model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String? // @db.Text
  access_token             String? // @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String? // @db.Text
  session_state            String?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  refresh_token_expires_in Int?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  // add HR extensions
  passwordHash String?
  role         UserRole  @default(EMPLOYEE)
  employeeId   String?   @unique
  employee     Employee? @relation("UserToEmployee", fields: [employeeId], references: [id], onDelete: SetNull)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// HR domain models
// ------------------------------------------------------

model Employee {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Core fields
  firstName String
  lastName  String
  telephone String
  email     String         @unique
  status    EmployeeStatus @default(ACTIVE)

  // Manager relationship - self-relation
  managerId     String?
  manager       Employee?  @relation("EmployeeManager", fields: [managerId], references: [id], onDelete: SetNull)
  directReports Employee[] @relation("EmployeeManager")

  // Departments this employee manages
  departments        EmployeeDepartment[]
  managedDepartments Department[]         @relation("DepartmentManager")

  user   User?   @relation("UserToEmployee")
  userId String?

  @@index([managerId])
}

model Department {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Core fields
  name   String           @unique
  status DepartmentStatus @default(ACTIVE)

  // Manager of the department
  managerId String?
  manager   Employee?            @relation("DepartmentManager", fields: [managerId], references: [id], onDelete: SetNull)
  employees EmployeeDepartment[]

  @@index([managerId])
}

model EmployeeDepartment {
  // Join table with composite primary key
  employeeId   String
  departmentId String

  employee   Employee   @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  department Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  // Assignment metadata
  createdAt DateTime @default(now())

  // Composite PK (also indexes employeeId+departmentId together)
  @@id([employeeId, departmentId])
  @@index([employeeId])
  @@index([departmentId])
}
